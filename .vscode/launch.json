{
  "version": "0.2.0",
  "configurations": [
      {
          "type": "node",
          "request": "launch",
          "name": "Debug Nest Framework",
          "runtimeExecutable": "nest",
          "args": [
              "${workspaceFolder}/src/main.ts"
          ],
          "runtimeArgs": [
            "start",
              "--watch",
              // "-r",
              // "ts-node/register",
              // "-r",
              // "tsconfig-paths/register"
          ],
          "sourceMaps": true,
          "envFile": "${workspaceFolder}/.env",
          "cwd": "${workspaceRoot}",
          "console": "integratedTerminal",
          "protocol": "inspector",
          "env": {
            // "ENV": "local",
            "DEBUG": "sequelize*"
          },
          "restart": true
      }
  ]
}
